generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model produto {
  id            Int                @id @default(autoincrement())
  nome          String             @db.VarChar(60)
  descricao     String
  preco         Float
  categorias    Categoria[]        @default([])
  fotoPrincipal String             @default("")
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  deleted       Boolean            @default(false)
  marcaId       Int
  marca         marca              @relation(fields: [marcaId], references: [id])
  fotos         Foto[]
  estoque       Int                @default(10)
  carrinhos     carrinho_produto[]

  @@map("produtos")
}

model Foto {
  id        Int     @id @default(autoincrement())
  descricao String  @db.VarChar(100)
  codigo    String  @db.Text()
  produto   produto @relation(fields: [produtoId], references: [id])
  produtoId Int

  @@map("fotos")
}

enum Categoria {
  Medicamento
  Pokebola
  Item_segurar
  Item_batalha
  Miscelaneo
  Evolutivo
  Berry
  TM
  Vitamina
}

model marca {
  id    Int       @id @default(autoincrement())
  nome  String    @db.VarChar(60)
  foto  String
  itens produto[]

  @@map("marcas")
}

model usuario {
  id              String     @id @default(uuid()) @db.VarChar(36)
  nome            String     @db.VarChar(60)
  email           String     @unique @db.VarChar(40)
  senha           String     @db.VarChar(60)
  imagem          String     @default("")
  createdAt       DateTime   @default(now())
  admin           Boolean    @default(false)
  recuperacao     String?
  carrinhos       carrinho[]
  deleted         Boolean    @default(false)
  tentativasLogin Int        @default(0)
  blocked         Boolean    @default(false)
  logs            Log[]

  @@map("usuarios")
}

model carrinho {
  id        Int                @id @default(autoincrement())
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  usuario   usuario            @relation(fields: [usuarioId], references: [id])
  usuarioId String
  total     Float              @default(0)
  produtos  carrinho_produto[]
  pronto    Boolean            @default(false)

  @@map("carrinhos")
}

model carrinho_produto {
  id         Int      @id @default(autoincrement())
  carrinho   carrinho @relation(fields: [carrinhoId], references: [id])
  carrinhoId Int
  produto    produto  @relation(fields: [produtoId], references: [id])
  produtoId  Int
  preco      Float
  quantidade Int

  @@map("carrinhos_produtos")
}

model Log {
  id          Int      @id @default(autoincrement())
  descricao   String   @db.VarChar(60)
  complemento String   @db.VarChar(40)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  usuario     usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String

  @@map("logs")
}
